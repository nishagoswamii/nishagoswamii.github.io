---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Nisha Goswami - ML Engineer" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Nisha Goswami" />
    <meta name="keywords" content="Portfolio of Nisha Goswami, showcasing AI, ML, and creative tech projects" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <slot />
  </body>
</html>
